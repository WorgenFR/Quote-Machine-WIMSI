{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    {#  <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }S
    </style>#}

    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}


        <div id="login-block">
            <h1 class="h3 mb-3 font-weight-normal text-center pt-1">Veuillez vous connecter !</h1>

            <label for="inputLogin" style="margin-left: 38%; margin-top: 7%">Login</label>
            <input type="text" style="margin-left: 38%" value="{{ users[0].email }}" name="login" id="inputLogin" class="form-control w-25" autocomplete="username" required autofocus >
            <label for="inputPassword" style="margin-left: 38%; margin-top: 2%">Password</label>
            <input type="password" style="margin-left: 38%" value="antoine" name="password" id="inputPassword" class="form-control w-25" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {#
            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}

            <button class="btn btn-lg btn-success mt-3" type="submit" style="margin-left: 42%">Authentification</button>
        </div>
    </form>
{% endblock %}
