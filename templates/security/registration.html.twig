{% extends 'base.html.twig' %}

{% block body %}

    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }S
    </style>

    <div id="register-block" style="text-align: center">
        <h1>Inscription</h1>

        {{ form_start(form) }}

        <div style="margin-top: 5%">{{ form_row(form.email, {'attr': {'placeholder': 'Adresse mail'}}) }}</div>
        <div style="margin-top: 5%">{{ form_row(form.name, {'attr': {'placeholder': 'Pseudo'}}) }}</div>
        <div style="margin-top: 5%">{{ form_row(form.password, {'attr': {'placeholder': 'Mot de passe'}}) }}</div>

        <button type="submit" class="btn btn-success" style="margin-top: 5%">Inscription</button>
        {{ form_end(form) }}

    </div>
{% endblock %}